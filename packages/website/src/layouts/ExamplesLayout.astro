---
import type { MarkdownLayoutProps } from "astro";
import Navbar from "../components/Navbar.astro";
import { formatTitle } from "../utils/seo";
import BaseLayout from "./BaseLayout.astro";

interface Frontmatter {
  title: string;
  description?: string;
}

const {
  frontmatter: { title, description },
} = Astro.props as MarkdownLayoutProps<Frontmatter>;
---

<BaseLayout title={formatTitle(title)} {description}>
  <Navbar />
  <div class="max-w-7xl w-full mx-auto flex items-stretch">
    <div class="flex flex-1 w-full">
      <main class="relative pb-8 w-full justify-center max-w-full flex min-w-0">
        <article class="prose max-w-4xl px-6 md:px-8 pt-4 min-w-0 w-full">
          {/* TODO replace with <slot /> */}
