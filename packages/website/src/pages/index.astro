---
import BlurredBackground from "../components/BlurredBackground.astro";
import Container from "../components/Container.astro";
import Features from "../components/Features.astro";
import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="React Awesome Reveal | Performant Animated Components">
  <BlurredBackground />
  <Navbar />
  <main class="pt-4">
    <Container size="narrow">
      <h1 class="mt-8 text-center font-extrabold text-4xl md:text-5xl">
        React Awesome Reveal
      </h1>
      <div class="mt-6 -mx-4 md:-mx-6 2xl:-mx-24">
        <div class="mx-auto mb-10 px-4 w-[880px] max-w-full text-center">
          <p class="mb-2 text-lg md:text-2xl text-gray-600">
            Performant Animated Components
          </p>
          <Features />
        </div>
      </div>
      <div class="mt-6 leading-7 md:text-lg text-gray-700">
        <p>
          React Awesome Reveal is a library for React apps written in
          <a
            href="https://www.typescriptlang.org"
            target="_blank"
            rel="noopener">TypeScript</a
          > that provides performant and easy-to-use animated primitives.
        </p>
        <p>
          It uses the <a
            href="https://developer.mozilla.org/en-US/docs/Web/API/Intersection_Observer_API"
            target="_blank"
            rel="noopener">Intersection Observer API</a
          > to detect when elements appear in the viewport, while effects are implemented
          as <a
            href="https://developer.mozilla.org/en-US/docs/Web/CSS/CSS_Animations"
            target="_blank"
            rel="noopener">CSS Animations</a
          > rendered by <a
            href="https://emotion.sh"
            target="_blank"
            rel="noopener">Emotion</a
          >.
        </p>
      </div>
    </Container>
  </main>
  <footer class="mt-16 mb-20">
    <Container size="narrow">
      <div class="text-center">
        <a href="/docs/getting-started">Get Started</a> &bull;
        <a href="/examples/basic">Examples</a> &bull;
        <a
          href="https://github.com/morellodev/react-awesome-reveal"
          target="_blank"
          rel="noopener">GitHub</a
        >
      </div>
    </Container>
  </footer>
</BaseLayout>

<style>
  a {
    @apply underline font-medium text-emerald-600;
  }
</style>
